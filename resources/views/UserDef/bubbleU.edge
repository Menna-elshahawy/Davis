public class BubbleSort {
        
        public static void bubbleSort(int a[]){
            int n=a.length;
            for (int i=0; i<n-1; i++) {
                for (int j=0; j<n-1-i; j++)
                    if (a[j+1] < a[j]) { 
                        int tmp = a[j]; 
                        a[j] = a[j+1];
                        a[j+1] = tmp;
                }
            }

            System.out.println(Arrays.toString(a)); 
        }
    
    
        public static void main(String args[]) {
            int []a={7,1,8,3,5,2,4};
            bubbleSort(a);
          
        }
}

